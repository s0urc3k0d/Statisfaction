# ===================
# Statisfaction - Environment Variables
# ===================
# Copy this file to .env and fill in the values

# ===================
# Database (PostgreSQL)
# ===================
POSTGRES_USER=statisfaction
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=statisfaction
DATABASE_URL=postgresql://statisfaction:your_secure_password_here@db:5432/statisfaction

# ===================
# Redis
# ===================
REDIS_URL=redis://redis:6379

# ===================
# Session
# ===================
SESSION_SECRET=your_very_long_random_session_secret_here_at_least_32_chars

# ===================
# Twitch API
# ===================
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_REDIRECT_URI=https://your-domain.com/auth/twitch/callback

# ===================
# Twitch EventSub
# ===================
TWITCH_EVENTSUB_SECRET=your_eventsub_secret_long_random_string
TWITCH_EVENTSUB_CALLBACK_URL=https://your-domain.com/webhooks/twitch/eventsub

# ===================
# URLs
# ===================
BASE_URL=https://your-domain.com
FRONTEND_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com

# ===================
# Email (SMTP) - Optional
# ===================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@your-domain.com

# ===================
# Cache TTLs (seconds)
# ===================
CACHE_TTL_TWITCH_API=300
CACHE_TTL_ANALYTICS=900
